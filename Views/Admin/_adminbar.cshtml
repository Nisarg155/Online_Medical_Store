@using Microsoft.AspNetCore.Identity
@using hospital.Areas.Identity.Data
@inject SignInManager<hospitalUser> SignInManager

<nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
    <div class="navbar-brand-wrapper d-flex justify-content-center">
        <div class="navbar-brand-inner-wrapper d-flex align-items-center w-100">
            @*<a class="navbar-brand" href="dashboard"><img src="~/Content/template/images/logo.png" alt="logo" /></a>
            *@
            <a class="navbar-brand" href="dashboard">
                @*<img src="~/Content/template/images/logo.png" alt="">*@
                <span>
                    DDU Medical
                </span>
            </a>
        </div>
    </div>
    <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
       
        <ul class="navbar-nav navbar-nav-right">

            @if (SignInManager.IsSignedIn(User))
            {
                <li class="nav-item">
                    <a class="nav-link " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><strong>Hello @User.Identity?.Name!</strong></a>
                </li>
                <li class="nav-item">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("medico", "Home", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                    </form>
                </li>
            }
        </ul>
        <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
            <span class="mdi mdi-menu"></span>
        </button>
    </div>
</nav>